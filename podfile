def shared_pods
    pod 'SwiftLint'
end

def shared_pods_ios
    platform :ios, '12.0'
    shared_pods
end

def shared_pods_tvos
    platform :tvos, '12.0'
    shared_pods
end

def shared_pods_macos
    platform :macos, '10.14'
    shared_pods
end

target 'RVS_ONVIF_iOS' do
    shared_pods_ios
end

target 'RVS_ONVIF_tvOS' do
    shared_pods_tvos
end

target 'RVS_ONVIF_MacOS' do
    shared_pods_macos
end

target 'RVS_ONVIF_iOS_Tests' do
    pod 'SWXMLHash', '~> 4.7.0'
    shared_pods_ios
end

target 'RVS_ONVIF_tvOS_Tests' do
    pod 'SWXMLHash', '~> 4.7.0'
    shared_pods_tvos
end

target 'RVS_ONVIF_MacOS_Tests' do
    pod 'SWXMLHash', '~> 4.7.0'
    shared_pods_macos
end

target 'RVS_ONVIF iOS Test Harness' do
    pod 'MobileVLCKit'
    pod 'Reveal-SDK', :configurations => ['Debug']
    shared_pods_ios
end

target 'RVS_ONVIF Mac Test Harness' do
    pod 'VLCKit'
    shared_pods_macos
end
